<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- ImageView for background preview -->
    <ImageView
        android:id="@+id/background_preview_image"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <!-- Info container for background name, cost, and button -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <!-- Background name text -->
        <TextView
            android:id="@+id/background_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Background Name" />

        <!-- Background cost text -->
        <TextView
            android:id="@+id/background_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost: Points" />

        <!-- Buy button -->
        <Button
            android:id="@+id/buy_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy" />
    </LinearLayout>

</LinearLayout>
